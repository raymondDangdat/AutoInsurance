<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminInsuranceApplicationDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/app_bar_layout"
            android:id="@+id/insurance_applications_detalis_toolbar"/>
        <TextView
            android:id="@+id/txt_car_owner"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Car Owner:"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/txt_car_make"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Car Make:"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/txt_car_model"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Car Model:"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/txt_policy_type"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Policy Type:"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/txt_car_use"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Car Use"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/txt_car_value"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Car Value in Naira:"
            android:textStyle="bold"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/txt_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Car Picture"
            android:textStyle="bold"
            android:fontFamily="@font/fontt"
            android:textAlignment="center"
            android:textSize="15sp"
            android:layout_margin="10dp"/>

        <ImageView
            android:id="@+id/img_car_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/benz" />
        <TextView
            android:id="@+id/txt_papers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Car Receipt"
            android:textSize="15sp"
            android:textStyle="bold"
            android:fontFamily="@font/fontt"
            android:textAlignment="center"
            android:layout_margin="10dp"/>
        <ImageView
            android:id="@+id/img_car_papers"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/benz"
            android:visibility="gone"
            android:layout_margin="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/btn_approve"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Approve"
                android:textColor="@android:color/white"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_button"/>

            <Button
                android:id="@+id/btn_decline"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Decline"
                android:textColor="@android:color/white"
                android:layout_margin="10dp"
                android:background="@drawable/big_button_red"/>
        </LinearLayout>
    </LinearLayout>


</ScrollView>