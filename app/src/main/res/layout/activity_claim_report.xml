<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:scrollbarStyle="insideInset"
    android:layout_height="match_parent"
    tools:context=".ClaimReportActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/app_bar_layout"
            android:id="@+id/claim_roprt_toolbar">
        </include>

        <LinearLayout
            android:layout_margin="16dp"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Car Owner"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/editTextFullname"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:enabled="false"
                android:textStyle="bold"
                android:inputType="textPersonName"
                android:background="@drawable/edit_rounded"
                android:padding="10dp"
                android:hint=""/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="VEHICLE DETAILS"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/editTextNumberPlate"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:enabled="false"
                android:inputType="textShortMessage"
                android:background="@drawable/edit_rounded"
                android:padding="10dp"
                android:hint="Number Plate"/>


            <EditText
                android:id="@+id/editTextMake"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:inputType="text"
                android:enabled="false"
                android:background="@drawable/edit_rounded"
                android:padding="10dp"
                android:hint="Make e.g Benz, Honda, Toyota"/>

            <EditText
                android:id="@+id/editTextModel"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:background="@drawable/edit_rounded"
                android:padding="10dp"
                android:enabled="false"
                android:hint="Model e.g Benz 240C"/>


            <EditText
            android:id="@+id/editTextPolicyType"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:background="@drawable/edit_rounded"
            android:padding="10dp"
                android:enabled="false"
            android:hint="Capacity"/>

            <EditText
                android:id="@+id/editTextAmountPaid"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:enabled="false"
                android:inputType="textPersonName"
                android:background="@drawable/edit_rounded"
                android:padding="10dp"
                android:hint="Amount Paid"/>

            <EditText
                android:id="@+id/editTextValueInNaira"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:enabled="false"
                android:inputType="numberDecimal"
                android:background="@drawable/edit_rounded"
                android:padding="10dp"
                android:hint="Value in Naira"/>

            <EditText
                android:id="@+id/editTextUserOfVehicle"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:enabled="false"
                android:inputType="textPersonName"
                android:background="@drawable/edit_rounded"
                android:padding="10dp"
                android:hint="Use of Vehicle"/>

            <EditText
                android:id="@+id/editTextDatePaid"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:inputType="textMultiLine"
                android:background="@drawable/edit_rounded"
                android:padding="10dp"
                android:enabled="false"
                android:hint="Date Paid"/>

            <EditText
                android:id="@+id/editTextDateRegistered"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:inputType="textMultiLine"
                android:enabled="false"
                android:background="@drawable/edit_rounded"
                android:padding="10dp"
                android:hint="Date Registered"/>


            <ImageView
                android:id="@+id/car_image"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:visibility="gone"
                android:layout_margin="10dp"
                />
            <Button
                android:layout_marginTop="20dp"
                android:id="@+id/buttonUploadCarImg"
                android:layout_width="match_parent"
                android:background="@drawable/rounded_button"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:layout_height="wrap_content"
                android:text="Upload Car present picture"/>

            <Button
                android:layout_marginTop="20dp"
                android:id="@+id/buttonSubmit"
                android:layout_width="match_parent"
                android:background="@drawable/rounded_button"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:layout_height="wrap_content"
                android:text="Submit"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>