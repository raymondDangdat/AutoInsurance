<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InsuredCarsDetails">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/app_bar_layout"
        android:id="@+id/insured_cars_detalis_toolbar"/>
    <TextView
        android:id="@+id/txt_car_owner"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Car Owner:"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/txt_car_make"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Car Make:"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/txt_car_model"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Car Model:"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/txt_policy_type"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Policy Type:"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/txt_car_use"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Car Use"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/txt_car_value"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Car Value in Naira:"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <ImageView
        android:id="@+id/img_car_image"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/benz"/>

    <Button
        android:id="@+id/btn_upload_papers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload Papers"
        android:textColor="@android:color/white"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_button"/>

    <Button
        android:id="@+id/btn_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Insurance Status"
        android:textColor="@android:color/white"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_button"/>

    <Button
        android:id="@+id/btn_make_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Make Payment"
        android:textColor="@android:color/white"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_button"/>
</LinearLayout>

</ScrollView>