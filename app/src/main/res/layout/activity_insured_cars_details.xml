<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InsuredCarsDetails">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/app_bar_layout"
        android:id="@+id/insured_cars_detalis_toolbar"/>
    <TextView
        android:id="@+id/txt_car_owner"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Car Owner:"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/txt_car_make"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Car Make:"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/txt_car_model"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Car Model:"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/txt_policy_type"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Policy Type:"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/txt_car_use"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Car Use"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/txt_car_value"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Car Value in Naira:"
        android:textStyle="bold"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/txt_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Car Picture"
        android:textStyle="bold"
        android:fontFamily="@font/fontt"
        android:textAlignment="center"
        android:textSize="15sp"
        android:layout_margin="10dp"/>

    <ImageView
        android:id="@+id/img_car_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/benz"/>
    <TextView
        android:id="@+id/txt_papers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Car Receipt"
        android:textSize="15sp"
        android:textStyle="bold"
        android:fontFamily="@font/fontt"
        android:textAlignment="center"
        android:layout_margin="10dp"/>
    <ImageView
        android:id="@+id/img_papers"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:src="@drawable/benz"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btn_upload_papers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload Papers"
        android:textColor="@android:color/white"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_button"/>

    <Button
        android:id="@+id/btn_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Insurance Status"
        android:textColor="@android:color/white"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_button"/>

    <Button
        android:id="@+id/btn_make_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Make Payment"
        android:textColor="@android:color/white"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_button"/>


    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/edit_total_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Total Amount"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:layout_margin="10dp"
        android:visibility="gone"
        android:padding="10dp"
        />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/edit_card_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Enter Name on Card "
        android:layout_marginTop="10dp"
        android:ems="10"
        android:layout_margin="10dp"
        android:visibility="gone"
        android:padding="10dp"
        />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/edit_card_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Enter Card Number "
        android:layout_marginTop="10dp"
        android:maxLength="16"
        android:ems="10"
        android:layout_margin="10dp"
        android:visibility="gone"
        android:padding="10dp"
        />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/edit_ccv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Enter CCV e.g 311"
        android:maxLength="3"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:visibility="gone"
        />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/edit_card_expiry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Enter Card Expiry Date e.g 1220"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:padding="10dp"
        android:maxLength="4"
        android:layout_margin="10dp"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:text="Submit"
        android:textColor="@android:color/white"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/fonttt"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:visibility="gone"
        android:textAllCaps="false"
        />

</LinearLayout>

</ScrollView>