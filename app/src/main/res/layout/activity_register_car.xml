<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterCar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/app_bar_layout"
            android:id="@+id/register_car_toolbar">
        </include>

        <LinearLayout
            android:layout_margin="16dp"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Holder Information"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/editTextFName"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:inputType="textPersonName"
                android:background="@drawable/edit_rounded"
                android:padding="10dp"
                android:hint="First Name"/>

            <EditText
                android:id="@+id/editTextLName"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:inputType="textPersonName"
                android:background="@drawable/edit_rounded"
                android:padding="10dp"
                android:hint="Last Name"/>

            <EditText
                android:id="@+id/editTextOName"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:inputType="textPersonName"
                android:background="@drawable/edit_rounded"
                android:padding="10dp"
                android:hint="Other Name"/>

            <EditText
                android:id="@+id/editTextBvn"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:inputType="number"
                android:background="@drawable/edit_rounded"
                android:padding="10dp"
                android:maxLength="11"
                android:hint="Enter BVN "/>


            <EditText
                android:id="@+id/editTextAddress"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:inputType="textMultiLine"
                android:background="@drawable/edit_rounded"
                android:padding="10dp"
                android:hint="Address"/>

            <EditText
                android:id="@+id/editTextOccupation"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:inputType="text"
                android:background="@drawable/edit_rounded"
                android:padding="10dp"
                android:hint="Occupation Optional"/>

            <EditText
                android:id="@+id/editTextDisability"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:inputType="text"
                android:background="@drawable/edit_rounded"
                android:padding="10dp"
                android:hint="Diabilities (if any) optional"/>

            <EditText
                android:id="@+id/editTextPolicyType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:inputType="text"
                android:background="@drawable/edit_rounded"
                android:padding="10dp"
                android:hint="Policy Type"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="VEHICLE DETAILS"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/editTextNumberPlate"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:inputType="textShortMessage"
                android:background="@drawable/edit_rounded"
                android:padding="10dp"
                android:hint="Number Plate"/>


            <EditText
                android:id="@+id/editTextMake"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:inputType="text"
                android:background="@drawable/edit_rounded"
                android:padding="10dp"
                android:hint="Make e.g Benz, Honda, Toyota"/>

            <EditText
                android:id="@+id/editTextModel"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:background="@drawable/edit_rounded"
                android:padding="10dp"
                android:hint="Model e.g Benz 240C"/>


            <EditText
                android:id="@+id/editTextCapacity"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:background="@drawable/edit_rounded"
                android:padding="10dp"
                android:hint="Capacity"/>

            <Spinner
                android:id="@+id/no_of_seat"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/number_of_seats">
            </Spinner>

            <EditText
                android:id="@+id/editTextValueInNaira"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:inputType="numberDecimal"
                android:background="@drawable/edit_rounded"
                android:padding="10dp"
                android:hint="Value in Naira"/>

            <EditText
                android:id="@+id/editTextUserOfVehicle"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:inputType="textPersonName"
                android:background="@drawable/edit_rounded"
                android:padding="10dp"
                android:hint="Use of Vehicle"/>


            <ImageView
                android:id="@+id/car_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                />
            <Button
                android:layout_marginTop="20dp"
                android:id="@+id/buttonUploadCarImg"
                android:layout_width="match_parent"
                android:background="@drawable/rounded_button"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:layout_height="wrap_content"
                android:text="Upload Car Image"/>

            <Button
                android:layout_marginTop="20dp"
                android:id="@+id/buttonSubmit"
                android:layout_width="match_parent"
                android:background="@drawable/rounded_button"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:layout_height="wrap_content"
                android:text="Submit"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>